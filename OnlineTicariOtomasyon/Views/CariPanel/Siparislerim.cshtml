@using OnlineTicariOtomasyon.Models.Class
@model List<SalesStatus>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Tarih</th>
    </tr>
    @foreach(var item in Model)
            {
    <tr>
        <td>@item.Product.ProductName</td>
        <td>@item.Price</td>
        <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>
    </tr>
            }
</table>
