@using OnlineTicariOtomasyon.Models.Class
@model List<SalesStatus>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SalesStatusID</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Current.CurrentName @item.Current.CurrentSurname</td>
                <td>@item.Employee.EmployeeName @item.Employee.EmployeeSurname</td>
                <td>@item.Piece </td>
                <td>@item.Price ₺</td>
                <td>@item.TotalPrice ₺</td>
                <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>
                <td><a href="/Satis/SatisGetir/@item.SalesStatusID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@item.SalesStatusID" class="btn btn-outline-info">Detaylar</a></td>
            </tr>
        }
</table>

<a href="/Satis/YeniSatis/" class="btn btn-outline-success">Yeni Satış Yap</a>

