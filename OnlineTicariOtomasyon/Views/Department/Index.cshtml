@using OnlineTicariOtomasyon.Models.Class
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @item.DepartmentID
            </td>
            <td>
                @item.DepartmentName
            </td>
            <td><a href="/Department/DepartmanSil/@item.DepartmentID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Department/DepartmanGuncelle/@item.DepartmentID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Department/DepartmanDetay/@item.DepartmentID" class="btn btn-outline-info">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Department/DepartmanEkle" class="btn btn-outline-dark">Departman Ekle</a>