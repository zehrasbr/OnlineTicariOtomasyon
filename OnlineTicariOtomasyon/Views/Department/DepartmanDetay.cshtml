@using OnlineTicariOtomasyon.Models.Class
@model List<Employee>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Departman Detay Sayfası</h3>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Personel</th>
        <th>Satışlar</th>
    </tr>
    @foreach(var item in Model)
            {

    <tr>
        <td>@item.EmployeeName @item.EmployeeSurname</td>
        <td><a href="/Department/DepartmanPersonelSatis/@item.EmployeeID" class="btn btn-outline-secondary">Satışlar</a></td>
    </tr> 
    }
</table>
<a href="/Department/Index/" class="btn btn-outline-dark">Geri</a>