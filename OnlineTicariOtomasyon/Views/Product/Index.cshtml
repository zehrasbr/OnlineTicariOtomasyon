@using OnlineTicariOtomasyon.Models.Class;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
            {
                <p>
                    Ürün Adı : @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<br />
<table class="table table-hover">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Durumu</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.ProductBrand</td>
                    <td>@item.ProductStock</td>
                    <td>@item.PurchasePrice ₺</td>
                    <td>@item.SalePrice ₺</td>
                    <td><a href="/Product/UrunSil/@item.ProductID" class="btn btn-outline-danger">Pasif Yap</a></td>
                    <td><a href="/Product/UrunGetir/@item.ProductID" class="btn btn-outline-warning">Güncelle</a></td>
                </tr>
            }
</table>
<a href="/Product/YeniUrun/" class="btn btn-outline-success">Ürün Ekle</a>
